	"flatten_v3_contracts52": "yarn --cwd projects/v3-periphery run flatten_TickLens",
	"flatten_v3_contracts53": "yarn --cwd projects/v3-periphery run flatten_NonfungibleTokenPositionDescriptor",
	"flatten_v3_contracts54": "yarn --cwd projects/v3-periphery run flatten_NonfungiblePositionManager",
	"flatten_v3_contracts55": "yarn --cwd projects/v3-periphery run flatten_QubeInterfaceMulticall",
    "test": "yarn workspaces run test"
